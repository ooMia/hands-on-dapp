{
  "name": "hands-on-dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "prestart": "next build",
    "start": "next start",
    "pretest": "prettier . --write && next lint",
    "test": "playwright test",
    "prepare": "husky",
    "forge:build": "npm run --workspace=foundry build",
    "forge:deploy": "npm run --workspace=foundry deploy -- --rpc-url http://localhost:8545",
    "prestart": "anvil --allow-origin 'http://localhost:3000' & npm run forge:deploy",
    "start": "node src/index.js",
    "poststart": "pkill anvil",
    "test": "playwright test"
  },
  "dependencies": {
    "next": "^15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "ethers": "^6.13.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.20.1",
    "eslint-config-next": "^15.1.7",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "solc": "0.8.28"
  },
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "workspaces": [
    "foundry"
  ]
}