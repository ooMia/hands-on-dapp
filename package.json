{
  "name": "hands-on-dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier . --write --cache --cache-strategy metadata --log-level warn && pnpm -r format",
    "build": "pnpm run -r build",
    "dev": "pnpm run --filter front dev",
    "forge:deploy": "pnpm preforge && pnpm run --filter foundry broadcast:anvil --rpc-url http://localhost:8545",
    "start": "NODE_ENV=production pnpm build && next start",
    "test": "pnpm -r test",
    "predev": "pnpm forge:deploy"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
