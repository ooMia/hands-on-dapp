{
  "name": "hands-on-dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "forge:build": "pnpm run --filter foundry build",
    "forge:deploy": "pnpm run --filter foundry broadcast:anvil --rpc-url http://localhost:8545",
    "predev": "anvil --allow-origin 'http://localhost:3000' & pnpm run forge:deploy",
    "dev": "next dev --turbopack",
    "dev:ci": "pnpm prestart && CI=true pnpm dlx serve@latest out",
    "postdev": "pnpm exec pkill anvil || true",
    "prestart": "next build -d",
    "start": "NODE_ENV=production next start",
    "format": "prettier . --write --cache --cache-strategy metadata",
    "pretest": "tsc && next lint",
    "test": "tsx --test",
    "posttest": "pnpm format --log-level silent",
    "e2e": "playwright test",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "next": "^15.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "viem": "^2.23.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.3",
    "typescript": "<5.8.0"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ]
  }
}
