{
  "name": "front",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm run --filter foundry broadcast",
    "build": "next build -d",
    "start": "NODE_ENV=production pnpm build && next start",
    "dev": "NODE_ENV=development next dev --turbopack",
    "dev:ci": "CI=true next build -d && pnpm dlx serve@latest out",
    "format": "prettier . --write --cache --cache-strategy metadata --log-level warn",
    "pretest": "tsc && next lint",
    "test": "tsx --test",
    "posttest": "pnpm format --log-level silent",
    "e2e": "playwright test -x --quiet",
    "prepare": "husky",
    "postinstall": "pnpm exec playwright install --with-deps"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "viem": "^2.31.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.53.1",
    "@types/node": "^22.15.34",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.30.0",
    "eslint-config-next": "^15.3.4",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3"
  }
}
